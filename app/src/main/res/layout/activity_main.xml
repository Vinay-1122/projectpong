<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightbg"
    tools:context=".MainActivity">


    <Switch
        android:id="@+id/Switch_difficulty"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circlebg"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="Easy"
        android:textColor="#DFDFDF"
        android:textOff="Easy"
        android:textOn="Hard"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumb="@null"
        android:track="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pong"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Switch_Mode"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circlebg"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="VS Wall"
        android:textColor="#DFDFDF"
        android:textOff="VS Wall"
        android:textOn="VS CPU"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumb="@null"
        android:track="@null"
        app:layout_constraintBottom_toTopOf="@+id/Switch_difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startbtn"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Switch_Highscore"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circlebg"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="HIscore"
        android:textColor="#DFDFDF"
        android:textOff="HighScore"
        android:textOn="HiScore:20"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumb="@null"
        android:track="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Switch_difficulty"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pong"
        app:layout_constraintVertical_bias="0.148"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Switch_Sound"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circlebg"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="Sound\nOn"
        android:textColor="#DFDFDF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumb="@null"
        android:track="@null"
        app:layout_constraintBottom_toTopOf="@+id/startbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.766"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Switch_Vibraton"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Switch_Theme"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circlebg"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="Light \nTheme"
        android:textColor="#DFDFDF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumb="@null"
        android:track="@null"
        app:layout_constraintBottom_toTopOf="@+id/pong"
        app:layout_constraintEnd_toStartOf="@+id/Switch_Vibraton"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.895"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/Switch_Vibraton"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/circlebg"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:hapticFeedbackEnabled="true"
        android:text="Vibration\nOn"
        android:textColor="#DFDFDF"
        android:textOff="Vibration\nOn"
        android:textOn="Vibration\nOff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:thumb="@null"
        android:track="@null"
        app:layout_constraintBottom_toTopOf="@+id/pong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/startbtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/buttonbglight"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="Play !"
        android:textAllCaps="false"
        android:textColor="#DFDFDF"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/pong"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pong"
        android:layout_width="246dp"
        android:layout_height="237dp"
        android:background="@drawable/buttonbglight"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="PONG"
        android:textAllCaps="false"
        android:textColor="#DFDFDF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>